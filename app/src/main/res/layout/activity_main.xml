<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.wdy.base.JZVideoPlayerStandardLoopVideo
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/text_dark_gray"
            android:gravity="center"
            android:onClick="moveRefreshTest"
            android:text="测试下拉刷新"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wdy.base.module.view.banner.BannerView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/blue"
            android:gravity="center"
            android:onClick="singeDialog"
            android:text="单按钮提示框"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/text_green"
            android:gravity="center"
            android:onClick="mDialog"
            android:text="Material风格提示框"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/text_red"
            android:gravity="center"
            android:onClick="successDialog"
            android:text="成功提示"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/text_orange"
            android:gravity="center"
            android:onClick="failedDialog"
            android:text="失败提示"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/text_bottom_gray"
            android:gravity="center"
            android:onClick="DialogAddress"
            android:text="地区选择"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:scaleType="centerCrop"
        android:visibility="gone" />


</RelativeLayout>